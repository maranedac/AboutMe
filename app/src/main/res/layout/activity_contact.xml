<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.mac.aboutme.ContactActivity">

    <TextView

        android:id="@+id/linkedinTv"
        style="@style/ClickeableTextView"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@mipmap/ic_linkedin_black_24dp"
        android:text="LINKEDIN" />

    <TextView
        android:id="@+id/phoneTv"
        style="@style/ClickeableTextView"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableLeft="@mipmap/ic_phone_black_24dp"
        android:text="+569 12345678" />


    <fragment
        android:id="@+id/emailFragment"
        android:name="cl.mac.aboutme.EmailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
